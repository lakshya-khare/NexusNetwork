<h1>Welcome Mentor, <%= user.name %></h1>
<form action="/mentor/upload_material" method="POST">
  <input type="text" name="title" placeholder="Material Title" required>
  <input type="text" name="link" placeholder="Material Link (e.g., YouTube, Google Drive)" required>
  <select name="type" required>
    <option value="notes">Notes</option>
    <option value="video">Video</option>
    <option value="pdf">PDF</option>
  </select>
  <button type="submit">Upload Material</button>
</form>
